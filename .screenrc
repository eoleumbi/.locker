# ~/.screenrc
#
#   user specific screenrc
# ------------------------------------------------------------------------------

# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------
startup_message off

# ------------------------------------------------------------------------------
# TERMINAL SETTINGS
# ------------------------------------------------------------------------------
hardstatus on
hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..Y}%M %d%C%a"
